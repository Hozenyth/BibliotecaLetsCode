@model Emprestimo

<h1>Edição de cadastro para empréstimo de livro!</h1>

<form method="post" asp-controller="Home" asp-action="Editar">

    <div asp-validation-summary="All"></div>

    <div>
        <label asp-for="Nome">Digite seu Nome</label>
        <input asp-for="Nome" />
        <span asp-validation-for="Nome"></span>
    </div>

    <div>
        <label asp-for="Telefone">Digite seu Telefone</label>
        <input asp-for="Telefone" />
        <span asp-validation-for="Telefone"></span>
    </div>
    <div>
        <label asp-for="Confirmado">Você concorda em devolver o livro em bom estado?</label>
        <select asp-for="Confirmado">
            <option value="">Escolha a opção</option>
            <option value="true">Sim</option>
            <option value="false">Não</option>
        </select>
        <span asp-validation-for="Confirmado"></span>
    </div>
    <button type="submit">Salvar</button>
</form>